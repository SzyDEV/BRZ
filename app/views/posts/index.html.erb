<h2>Z ostatniego tygodnia</h2>
<%= render 'currentweek'%>
<h2>Wszystkie</h2>
<%= form_tag root_path, :method => 'get', :id => "category_select" do%>
    <%=select_tag(:tag, options_for_select([
    ['Elektronika'      ,1],
    ['Książki'          ,2],
    ['Zeszyty'          ,3],
    ['Przybory szkolne' ,4],
    ['Odzież'           ,5]
]),:include_blank => true)%>
    <%=select_tag(:category, options_for_select(
    [['Znaleziono',1],['Szukam',2]]
    ),:include_blank => true)%>
    <%=submit_tag "Search", :name => nil%>
<%end%>
<div id="filtered_posts">
<%if logged_in?%>
    <%= render :partial => "adminfilter"%>
<%else%>
    <%= render :partial => "filter"%>
<%end%>
</div>
<%=link_to "Dodaj nowy przedmiot", new_post_path%>

