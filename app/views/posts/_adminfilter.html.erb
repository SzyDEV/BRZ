<%@posts.each do |post|%>
    <%=link_to post_path(post) do%>
        <div>
            <h3><%=post.title%></h3>
            <p>
                <%if post.image.exists?%>
                    <%= image_tag post.image.url%>
                <%end%>
            </p>
            <p>Opis: <%=post.description.truncate(30)%>...</p>
        </div>
    <%end%>
    <%if logged_in?%>
        <%=link_to "ZatwierdÅº", confirm_post_path(post)%>
    <%end%>
<%end%>